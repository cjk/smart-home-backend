{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./app",
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["es6"]
  },
  "exclude": ["node_modules", "app", "data", "mockData"],
  "include": ["src/**/*.js"]
}
