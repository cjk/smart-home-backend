// @flow

export type Callback = (err: ?Error, res: Object) => void;

// Cron types
type TaskMin = {
  targets: Array<string>,
  act: string
}

export type TaskMeta = {
  id: number,
  status: string,
  startedAt: number | null,
  endedAt: number | null
}

export type TaskEvent = TaskMeta | {jobId: number}

export type Task = TaskMin | TaskMeta;

export type CronJob = {
  jobId: number,
  name: string,
  at: string | null,
  repeat: string,
  scheduled: boolean,
  running: boolean,
  lastRun: Date | null,
  tasks: Array<Task>
}

export type Crontab = Array<CronJob>;
