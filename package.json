{
  "name": "home-automation-backend",
  "version": "1.0.0",
  "description": "Provides a real-time API for reading and writing to your home's devices",
  "main": "./app/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjk/smart-home-backend.git"
  },
  "keywords": [
    "node",
    "knx",
    "real-time",
    "websockets",
    "pubsub",
    "automation",
    "realtime"
  ],
  "author": "@cjk",
  "license": "GPL-2.0",
  "homepage": "https://github.com/cjk/smart-home-backend#readme",
  "dependencies": {
    "date-fns": "^1.28.2",
    "debug": "^3.1.0",
    "deepstream.io-client-js": "^2.1.2",
    "del": "^3.0.0",
    "dotenv": "^6.0.0",
    "eibd": "^0.3.9",
    "kefir": "^3.8.2",
    "luxon": "^1.0.0",
    "nodemon": "^1.17.1",
    "ramda": "^0.25.0",
    "suncalc": "^1.8.0",
    "supports-color": "^5.3.0"
  },
  "devDependencies": {
    "@babel/cli": "7.1.0",
    "@babel/core": "7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0",
    "@babel/plugin-transform-flow-strip-types": "7.0.0",
    "@babel/preset-env": "7.1.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/register": "7.0.0",
    "babel-eslint": "^8.2.2",
    "eslint-config-recommended": "^3.0.0",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.9.0"
  },
  "scripts": {
    "dev": "env DEBUG='smt:*,error,debug' PORT=8001 NODE_ENV=development ./node_modules/.bin/nodemon ./app/index.js",
    "prod": "env DEBUG='error' PORT=8001 NODE_ENV=production node ./app/index.js",
    "start": "env PORT=8001 ./app/index.js"
  },
  "nodemonConfig": {
    "ignore": [
      "src/*"
    ],
    "delay": "2000"
  }
}
