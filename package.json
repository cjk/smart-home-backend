{
  "name": "home-automation-backend",
  "version": "1.0.0",
  "description": "Provides a real-time API for reading and writing to your home's devices",
  "main": "./app/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjk/smart-home-backend.git"
  },
  "keywords": [
    "node",
    "knx",
    "real-time",
    "websockets",
    "pubsub",
    "automation",
    "realtime"
  ],
  "author": "@cjk",
  "license": "GPL-2.0",
  "homepage": "https://github.com/cjk/smart-home-backend#readme",
  "dependencies": {
    "babel": "latest",
    "babel-core": "latest",
    "babel-eslint": "^8.0.1",
    "babel-plugin-transform-flow-strip-types": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.22.0",
    "babel-preset-env": "^1.2.2",
    "babel-register": "latest",
    "date-fns": "^1.28.2",
    "debug": "^3.1.0",
    "deepstream.io-client-js": "^2.1.2",
    "del": "^2.2.2",
    "dotenv": "^4.0.0",
    "eibd": "^0.3.9",
    "gulp": "latest",
    "gulp-babel": "latest",
    "gulp-changed": "^3.1.1",
    "gulp-eslint": "latest",
    "gulp-preprocess": "latest",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-watch": "latest",
    "immutable": "^3.8.2",
    "kefir": "^3.7.4",
    "nodemon": "^1.12.1",
    "ramda": "^0.25.0",
    "supports-color": "^5.0.1"
  },
  "devDependencies": {
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-fp": "^2.3.0",
    "piping": "latest"
  },
  "scripts": {
    "dev": "env DEBUG='smt:*,error,debug' PORT=8001 NODE_ENV=development ./node_modules/.bin/nodemon ./app/index.js",
    "prod": "env DEBUG='error' PORT=8001 NODE_ENV=production node ./app/index.js",
    "start": "env PORT=8001 ./app/index.js"
  },
  "nodemonConfig": {
    "ignore": [
      "src/*"
    ],
    "delay": "2000"
  }
}
